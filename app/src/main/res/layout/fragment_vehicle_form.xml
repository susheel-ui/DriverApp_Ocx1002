<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Vehicle_formFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white"
        >

        <!-- Vehicle Number -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Number *"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>
        <EditText
            android:id="@+id/vehicleNumberEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vehicle Number"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="24dp"/>
        <!-- Note: @drawable/edit_text_background would be a shape drawable with a white background and rounded corners -->

        <!-- Vehicle RC Upload -->
        <RelativeLayout
            android:id="@+id/vehicleRcUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/upload_item_background"
            android:padding="16dp"
            android:layout_marginBottom="24dp">
            <!-- Note: @drawable/upload_item_background would be a shape drawable similar to the EditText background -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle RC"
                android:layout_centerVertical="true"
                android:textColor="@android:color/black"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:textColor="#2979FF"
                android:drawableStart="@drawable/camera_icon"
                android:drawablePadding="8dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textStyle="bold"/>
            <!-- Note: @drawable/ic_camera would be a vector asset for the camera icon -->
        </RelativeLayout>

        <!-- City of Operation -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select the city of operation"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">
            <Spinner
                android:id="@+id/citySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@android:color/transparent"/>
        </RelativeLayout>

    </LinearLayout>


</FrameLayout>